generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  posts     Posts[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      UserRole @default(USER)
}

enum UserRole {
  USER
  ADMIN
  GUEST
  CONTRIBUTOR
}

model Posts {
  id        String   @id @default(cuid())
  title     String
  content   String
  authorId  String?
  category  String?
  author    User?    @relation(fields: [authorId], references: [id])
  image  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rating {
  id          String   @id @default(cuid())
  name        String
  description String?
  rating      Int
}

